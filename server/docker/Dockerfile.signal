# Dockerfile for Nightjar Signaling Server
FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY server/signaling/package*.json ./

# Install dependencies
RUN npm ci --only=production

# Copy source
COPY server/signaling/ ./

# Create non-root user
RUN addgroup -g 1001 -S Nightjar && \
    adduser -S Nightjar -u 1001 -G Nightjar

USER Nightjar

# Health check
HEALTHCHECK --interval=30s --timeout=3s \
  CMD node -e "require('http').get('http://localhost:4444', (r) => process.exit(r.statusCode === 426 ? 0 : 1))" || exit 1

EXPOSE 4444

CMD ["node", "index.js"]
